    <script>
      function sortData(interval) {
        const elements = document.querySelectorAll('.mb-0');
        console.log()
    
        elements.forEach((element) => {
          element.innerHTML = 'Loading...';
        });
    
        $.ajax({
          url: '/admin/sort_sales_data',
          method: 'POST',
          data: { interval: interval }, // Include the interval parameter in the request
          success: function (response) {
            elements.forEach((element) => {
              const elementId = element.getAttribute('id');
              if (elementId === 'totalSalesValue') {
                element.innerHTML = 'Rs ' + response.totalSales;
              } else if (elementId === 'totalOrdersValue') {
                element.innerHTML = response.totalOrders;
              } else if (elementId === 'onlinePaymentValue') {
                element.innerHTML = 'Rs ' + response.onlinePayment;
              } else if (elementId === 'codValue') {
                element.innerHTML = 'Rs ' + response.cod;
              }
            });
          },
          error: function (error) {
            console.error('Error fetching sales data:', error);
            elements.forEach((element) => {
              element.innerHTML = 'N/A';
            });
          }
        });
      }
    </script>
<script>
  function fetchMonthlySalesData() {
    $.ajax({
      url: '/admin/monthly-sales', // Update the URL to match your backend route for fetching monthly sales data
      method: 'GET',
      success: function (monthlySalesData) {
        createChart(monthlySalesData);
      },
      error: function (error) {
        console.error('Error fetching monthly sales data:', error);
      }
    });
  }

  function createChart(monthlySalesData) {
    const monthNames = [
      'January', 'February', 'March', 'April', 'May', 'June',
      'July', 'August', 'September', 'October', 'November', 'December'
    ];

    const months = monthNames; // Use monthNames directly for x-axis labels

    const totalSales = monthNames.map((month) => {
      const data = monthlySalesData.find(item => monthNames[new Date(item._id + '-01').getMonth()] === month);
      return data ? data.totalSales : 0; // Use 0 for months with no data
    });

    const config = {
      type: 'bar',
      data: {
        labels: months,
        datasets: [{
          label: 'Monthly Sales',
          data: totalSales,
          backgroundColor: 'rgba(75, 192, 192, 0.2)',
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    };

    const ctx = document.getElementById('myChart').getContext('2d');
    new Chart(ctx, config);
  }

  document.addEventListener('DOMContentLoaded', fetchMonthlySalesData);
</script>
