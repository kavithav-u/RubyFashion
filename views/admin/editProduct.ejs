<script>
    $(document).ready(function() {
      // ... Other code ...
  
      // Handle image removal
      $('.remove-image').click(function() {
        var productId = '<%= product._id %>';
        var position = $(this).data('index'); // Use the data attribute
        var image = '<%= product.itemImage[' + position + '] %>'; // Access the image at the given position
  
        $.ajax({
          url: '/admin/product/removeProductImage',
          method: 'POST',
          data: {
            id: productId,
            position: position,
            image: image
          },
          success: function(response) {
            if (response.remove) {
                window.location.reload()
            }
          },
          error: function(error) {
            console.log('Error:', error);
          }
        });
      });
    });
  </script>
  
  
      
    
