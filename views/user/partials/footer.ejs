    <script>
        const quickViewButtons = document.querySelectorAll(".btn-quick-view");
        const quickViewModal = document.getElementById("quickView");
      
        quickViewButtons.forEach((button) => {
          button.addEventListener("click", () => {
            const productName = button.dataset.productName;
            const productPrice = button.dataset.productPrice;
            const productDescription = button.dataset.productDescription;
            const productImages = button.dataset.productImages.split(',');
      
            // Populate the quick view modal with the product details
            const modalTitle = quickViewModal.querySelector(".modal-title");
            const modalPrice = quickViewModal.querySelector(".price");
            const modalDescription = quickViewModal.querySelector(".products-desc");
            const modalThumbnails = quickViewModal.querySelector(".product-thumb-carousel");
      
            modalTitle.textContent = productName;
            modalPrice.textContent = `Rs. ${productPrice}`;
            modalDescription.textContent = productDescription;
      
            // Clear existing images from the carousel
            modalThumbnails.innerHTML = '';
      
            // Add new product images to the carousel
            productImages.forEach((imageSrc) => {
              const thumbnailItem = document.createElement('div');
              thumbnailItem.classList.add('single-thumb-item');
              thumbnailItem.innerHTML = `<img class="img-fluid" src="/uploads/${imageSrc}" alt="${productName}">`;
              modalThumbnails.appendChild(thumbnailItem);
            });
      
            // Show the quick view modal
            $('#quickView').modal('show');
          });
        });
      </script>
